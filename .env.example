# ============================================
# REQUIRED ENVIRONMENT VARIABLES
# These must be set for the application to run
# ============================================

# Supabase - Database and Authentication
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
DATABASE_URL=

# OpenAI - AI Document Extraction
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# JWT - Authentication Tokens
# Generate secure random strings (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=
NEXTAUTH_SECRET=

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000

# Application Settings
BASE_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# OPTIONAL ENVIRONMENT VARIABLES
# These enable additional features
# ============================================

# OpenAI Fallback Keys (optional)
# Additional API keys for rate limit handling
OPENAI_API_KEY_FALLBACK_1=
OPENAI_API_KEY_FALLBACK_2=

# Email Service - Resend (https://resend.com)
# Required for email notifications
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@ecocomply.com

# SMS Service - Twilio (https://www.twilio.com)
# Required for SMS notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Redis - Background Jobs and Caching
# Required for production, optional for development
REDIS_URL=

# JWT Refresh Tokens
JWT_REFRESH_SECRET=

# Rate Limiting Configuration
DEFAULT_RATE_LIMIT_PER_MINUTE=100
AI_EXTRACTION_RATE_LIMIT_PER_MINUTE=5
DOCUMENT_UPLOAD_RATE_LIMIT_PER_MINUTE=10

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Sentry Error Tracking (https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# PostHog Analytics (https://posthog.com)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ============================================
# INTEGRATIONS
# ============================================

# Google Calendar Integration (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Microsoft Outlook Calendar Integration (https://portal.azure.com)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=

# Slack Integration (https://api.slack.com/apps)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=

# ============================================
# NOTES
# ============================================
# - Copy this file to .env.local and fill in your values
# - Never commit .env.local to version control
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Generate secure secrets with: openssl rand -base64 32
