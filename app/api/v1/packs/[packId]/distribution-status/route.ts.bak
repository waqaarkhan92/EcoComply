/**
 * Pack Distribution Status Endpoint
 * GET /api/v1/packs/{packId}/distribution-status - Get distribution status
 */

import { NextRequest, NextResponse } from 'next/server';
import { supabaseAdmin } from '@/lib/supabase/server';
import { successResponse, errorResponse, paginatedResponse, ErrorCodes } from '@/lib/api/response';
import { requireAuth, getRequestId } from '@/lib/api/middleware';
import { addRateLimitHeaders } from '@/lib/api/rate-limit';
import { parsePaginationParams, createCursor } from '@/lib/api/pagination';

export async function GET(
  request: NextRequest, props: { params: Promise<{ packId: string } }
) {
  const requestId = getRequestId(request);

  try {
    // Require authentication
    const authResult = await requireAuth(request);
    if (authResult instanceof NextResponse) {
      return authResult;
    }
    const { user } = authResult;

    const params = await props.params;
    const { packId } = params;

    // Verify pack exists
    const { data: pack, error: packError } = await supabaseAdmin
      .from('audit_packs')
      .select('id')
      .eq('id', packId)
      .maybeSingle();

    if (packError || !pack) {
      return errorResponse(
        ErrorCodes.NOT_FOUND,
        'Pack not found',
        404,
        null,
        { request_id: requestId }
      );
    }

    // Parse pagination params
    const { limit, cursor } = parsePaginationParams(request);

    // Get distribution records
    let query = supabaseAdmin
      .from('pack_distributions')
      .select('id, distributed_to, distributed_at, distribution_method, email_address, shared_link_token, viewed_at, view_count, created_at')
      .eq('pack_id', packId)
      .order('distributed_at', { ascending: false })
      .limit(limit + 1);

    if (cursor) {
      const parsedCursor = JSON.parse(Buffer.from(cursor, 'base64').toString('utf-8'));
      query = query.lt('created_at', parsedCursor.created_at);
    }

    const { data: distributions, error } = await query;

    if (error) {
      return errorResponse(
        ErrorCodes.INTERNAL_ERROR,
        'Failed to fetch distribution status',
        500,
        { error: error.message },
        { request_id: requestId }
      );
    }

    // Check if there are more results
    const hasMore = distributions && distributions.length > limit;
    const results = hasMore ? distributions.slice(0, limit) : distributions || [];

    // Create cursor for next page
    let nextCursor: string | undefined;
    if (hasMore && results.length > 0) {
      const lastItem = results[results.length - 1];
      nextCursor = createCursor(lastItem.id, lastItem.created_at);
    }

    // Calculate summary stats
    const totalDistributions = results.length;
    const emailCount = results.filter((d: any) => d.distribution_method === 'EMAIL').length;
    const linkCount = results.filter((d: any) => d.distribution_method === 'SHARED_LINK').length;
    const viewedCount = results.filter((d: any) => d.viewed_at !== null).length;

    const response = successResponse(
      {
        pack_id: packId,
        distributions: results,
        summary: {
          total: totalDistributions,
          email_count: emailCount,
          shared_link_count: linkCount,
          viewed_count: viewedCount,
        },
        pagination: {
          next_cursor: nextCursor,
          has_more: hasMore,
        },
      },
      200,
      { request_id: requestId }
    );
    return await addRateLimitHeaders(request, user.id, response);
  } catch (error: any) {
    console.error('Get pack distribution status error:', error);
    return errorResponse(
      ErrorCodes.INTERNAL_ERROR,
      'An unexpected error occurred',
      500,
      { error: error.message || 'Unknown error' },
      { request_id: requestId }
    );
  }
}

