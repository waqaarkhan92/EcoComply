import { NextRequest, NextResponse } from 'next/server';
import { supabaseAdmin } from '@/lib/supabase/server';
import { successResponse, errorResponse, ErrorCodes } from '@/lib/api/response';
import { requireAuth, getRequestId } from '@/lib/api/middleware';
import { requireModule } from '@/lib/api/module-check';
import { addRateLimitHeaders } from '@/lib/api/rate-limit';

export const dynamic = 'force-dynamic';

/**
 * GET /api/v1/module-3/sulphur-content-reports/[reportId]
 * Get a single sulphur content report
 */
export async function GET(
  request: NextRequest,
  { params }: { params: { reportId: string } }
) {
  const requestId = getRequestId(request);

  try {
    // Require authentication
    const authResult = await requireAuth(request);
    if (authResult instanceof NextResponse) {
      return authResult;
    }
    const { user } = authResult;

    // Check Module 3 is activated
    const moduleCheck = await requireModule(user.company_id, 'MODULE_3');
    if (moduleCheck) {
      return moduleCheck;
    }

    const { data, error } = await supabaseAdmin
      .from('sulphur_content_reports')
      .select('*, generator:generators(generator_identifier, generator_type), evidence:evidence_items(id, file_name)')
      .eq('id', params.reportId)
      .single();

    if (error || !data) {
      return errorResponse(
        ErrorCodes.NOT_FOUND,
        'Sulphur content report not found',
        404,
        {},
        { request_id: requestId }
      );
    }

    return successResponse(data);
  } catch (error: any) {
    console.error('Error in GET /api/v1/module-3/sulphur-content-reports/[reportId]:', error);
    return errorResponse(
      ErrorCodes.INTERNAL_ERROR,
      error.message || 'Internal server error',
      error.status || 500,
      {},
      { request_id: requestId }
    );
  }
}

/**
 * PUT /api/v1/module-3/sulphur-content-reports/[reportId]
 * Update a sulphur content report
 */
export async function PUT(
  request: NextRequest,
  { params }: { params: { reportId: string } }
) {
  const requestId = getRequestId(request);

  try {
    // Require authentication
    const authResult = await requireAuth(request);
    if (authResult instanceof NextResponse) {
      return authResult;
    }
    const { user } = authResult;

    // Check Module 3 is activated
    const moduleCheck = await requireModule(user.company_id, 'MODULE_3');
    if (moduleCheck) {
      return moduleCheck;
    }

    const body = await request.json();
    const {
      fuel_type,
      test_date,
      batch_reference,
      supplier_name,
      sulphur_content_percentage,
      sulphur_content_mg_per_kg,
      test_method,
      test_standard,
      test_laboratory,
      test_certificate_reference,
      regulatory_limit_percentage,
      regulatory_limit_mg_per_kg,
      compliance_status,
      exceedance_details,
      evidence_id,
      notes,
    } = body;

    // Get existing report to recalculate compliance if needed
    const { data: existing, error: fetchError } = await supabaseAdmin
      .from('sulphur_content_reports')
      .select('sulphur_content_percentage, sulphur_content_mg_per_kg, regulatory_limit_percentage, regulatory_limit_mg_per_kg')
      .eq('id', params.reportId)
      .single();

    if (fetchError || !existing) {
      return errorResponse(
        ErrorCodes.NOT_FOUND,
        'Sulphur content report not found',
        404,
        {},
        { request_id: requestId }
      );
    }

    const finalSulphurPct = sulphur_content_percentage !== undefined ? sulphur_content_percentage : existing.sulphur_content_percentage;
    const finalSulphurMg = sulphur_content_mg_per_kg !== undefined ? sulphur_content_mg_per_kg : existing.sulphur_content_mg_per_kg;
    const finalRegLimitPct = regulatory_limit_percentage !== undefined ? regulatory_limit_percentage : existing.regulatory_limit_percentage;
    const finalRegLimitMg = regulatory_limit_mg_per_kg !== undefined ? regulatory_limit_mg_per_kg : existing.regulatory_limit_mg_per_kg;

    // Calculate compliance status if regulatory limits provided
    let calculatedStatus = compliance_status;
    if (finalRegLimitPct !== null && finalSulphurPct > finalRegLimitPct) {
      calculatedStatus = 'EXCEEDED';
    } else if (finalRegLimitMg !== null && finalSulphurMg && finalSulphurMg > finalRegLimitMg) {
      calculatedStatus = 'EXCEEDED';
    } else if (finalRegLimitPct !== null || finalRegLimitMg !== null) {
      calculatedStatus = calculatedStatus || 'COMPLIANT';
    }

    const updateData: any = {};
    if (fuel_type !== undefined) updateData.fuel_type = fuel_type;
    if (test_date !== undefined) updateData.test_date = test_date;
    if (batch_reference !== undefined) updateData.batch_reference = batch_reference;
    if (supplier_name !== undefined) updateData.supplier_name = supplier_name;
    if (sulphur_content_percentage !== undefined) updateData.sulphur_content_percentage = sulphur_content_percentage;
    if (sulphur_content_mg_per_kg !== undefined) updateData.sulphur_content_mg_per_kg = sulphur_content_mg_per_kg;
    if (test_method !== undefined) updateData.test_method = test_method;
    if (test_standard !== undefined) updateData.test_standard = test_standard;
    if (test_laboratory !== undefined) updateData.test_laboratory = test_laboratory;
    if (test_certificate_reference !== undefined) updateData.test_certificate_reference = test_certificate_reference;
    if (regulatory_limit_percentage !== undefined) updateData.regulatory_limit_percentage = regulatory_limit_percentage;
    if (regulatory_limit_mg_per_kg !== undefined) updateData.regulatory_limit_mg_per_kg = regulatory_limit_mg_per_kg;
    if (calculatedStatus) updateData.compliance_status = calculatedStatus;
    if (exceedance_details !== undefined) updateData.exceedance_details = exceedance_details;
    if (evidence_id !== undefined) updateData.evidence_id = evidence_id;
    if (notes !== undefined) updateData.notes = notes;

    const { data, error } = await supabaseAdmin
      .from('sulphur_content_reports')
      .update(updateData)
      .eq('id', params.reportId)
      .select()
      .single();

    if (error || !data) {
      return errorResponse(
        error ? ErrorCodes.INTERNAL_ERROR : ErrorCodes.NOT_FOUND,
        'Failed to update sulphur content report',
        error ? 500 : 404,
        {},
        { request_id: requestId }
      );
    }

    return successResponse(data);
  } catch (error: any) {
    console.error('Error in PUT /api/v1/module-3/sulphur-content-reports/[reportId]:', error);
    return errorResponse(
      ErrorCodes.INTERNAL_ERROR,
      error.message || 'Internal server error',
      error.status || 500,
      {},
      { request_id: requestId }
    );
  }
}

/**
 * DELETE /api/v1/module-3/sulphur-content-reports/[reportId]
 * Delete a sulphur content report
 */
export async function DELETE(
  request: NextRequest,
  { params }: { params: { reportId: string } }
) {
  const requestId = getRequestId(request);

  try {
    // Require authentication
    const authResult = await requireAuth(request);
    if (authResult instanceof NextResponse) {
      return authResult;
    }
    const { user } = authResult;

    // Check Module 3 is activated
    const moduleCheck = await requireModule(user.company_id, 'MODULE_3');
    if (moduleCheck) {
      return moduleCheck;
    }

    const { error } = await supabaseAdmin
      .from('sulphur_content_reports')
      .delete()
      .eq('id', params.reportId);

    if (error) {
      return errorResponse(
        ErrorCodes.INTERNAL_ERROR,
        'Failed to delete sulphur content report',
        500,
        {},
        { request_id: requestId }
      );
    }

    return new NextResponse(null, { status: 204 });
  } catch (error: any) {
    console.error('Error in DELETE /api/v1/module-3/sulphur-content-reports/[reportId]:', error);
    return errorResponse(
      ErrorCodes.INTERNAL_ERROR,
      error.message || 'Internal server error',
      error.status || 500,
      {},
      { request_id: requestId }
    );
  }
}

