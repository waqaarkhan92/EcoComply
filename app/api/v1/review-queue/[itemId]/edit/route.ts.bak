/**
 * Edit Review Queue Item
 * PUT /api/v1/review-queue/{itemId}/edit
 */

import { NextRequest, NextResponse } from 'next/server';
import { supabaseAdmin } from '@/lib/supabase/server';
import { successResponse, errorResponse, ErrorCodes } from '@/lib/api/response';
import { requireAuth, getRequestId } from '@/lib/api/middleware';
import { addRateLimitHeaders } from '@/lib/api/rate-limit';

export async function PUT(
  request: NextRequest, props: { params: Promise<{ itemId: string } }
) {
  const requestId = getRequestId(request);

  try {
    // Require authentication
    const authResult = await requireAuth(request);
    if (authResult instanceof NextResponse) {
      return authResult;
    }
    const { user } = authResult;

    const params = await props.params;
    const { itemId } = params;

    // Parse request body
    const body = await request.json();
    const {
      obligation_title,
      obligation_description,
      category,
      frequency,
      deadline_date,
      edit_reason,
    } = body;

    if (!edit_reason || edit_reason.trim().length === 0) {
      return errorResponse(
        ErrorCodes.VALIDATION_ERROR,
        'edit_reason is required',
        422,
        { edit_reason: 'edit_reason is required' },
        { request_id: requestId }
      );
    }

    // Get review queue item
    const { data: item, error: itemError } = await supabaseAdmin
      .from('review_queue_items')
      .select('id, obligation_id, review_status, original_data')
      .eq('id', itemId)
      .single();

    if (itemError || !item) {
      return errorResponse(
        ErrorCodes.NOT_FOUND,
        'Review queue item not found',
        404,
        null,
        { request_id: requestId }
      );
    }

    if (item.review_status !== 'PENDING') {
      return errorResponse(
        ErrorCodes.VALIDATION_ERROR,
        'Item has already been reviewed',
        422,
        { review_status: item.review_status },
        { request_id: requestId }
      );
    }

    // Prepare edited data
    const editedData: any = {};
    if (obligation_title !== undefined) editedData.obligation_title = obligation_title;
    if (obligation_description !== undefined) editedData.obligation_description = obligation_description;
    if (category !== undefined) editedData.category = category;
    if (frequency !== undefined) editedData.frequency = frequency;
    if (deadline_date !== undefined) editedData.deadline_date = deadline_date;

    // Update review queue item
    const { data: updatedItem, error: updateError } = await supabaseAdmin
      .from('review_queue_items')
      .update({
        review_status: 'EDITED',
        review_action: 'EDITED',
        reviewed_by: user.id,
        reviewed_at: new Date().toISOString(),
        review_notes: edit_reason,
        edited_data: editedData,
        updated_at: new Date().toISOString(),
      })
      .eq('id', itemId)
      .select()
      .single();

    if (updateError) {
      return errorResponse(
        ErrorCodes.INTERNAL_ERROR,
        'Failed to edit review item',
        500,
        { error: updateError.message },
        { request_id: requestId }
      );
    }

    // If there's an associated obligation, update it with the edited data
    if (item.obligation_id) {
      const obligationUpdate: any = {
        review_status: 'EDITED',
        status: 'PENDING', // Activate the obligation
      };

      if (obligation_title !== undefined) obligationUpdate.obligation_title = obligation_title;
      if (obligation_description !== undefined) obligationUpdate.obligation_description = obligation_description;
      if (category !== undefined) obligationUpdate.category = category;
      if (frequency !== undefined) obligationUpdate.frequency = frequency;
      if (deadline_date !== undefined) obligationUpdate.deadline_date = deadline_date;

      await supabaseAdmin
        .from('obligations')
        .update(obligationUpdate)
        .eq('id', item.obligation_id);
    }

    const response = successResponse(
      {
        id: updatedItem.id,
        review_status: updatedItem.review_status,
        reviewed_by: updatedItem.reviewed_by,
        reviewed_at: updatedItem.reviewed_at,
        edited_data: updatedItem.edited_data,
      },
      200,
      { request_id: requestId }
    );
    return await addRateLimitHeaders(request, user.id, response);
  } catch (error: any) {
    console.error('Edit review item error:', error);
    return errorResponse(
      ErrorCodes.INTERNAL_ERROR,
      'An unexpected error occurred',
      500,
      { error: error.message || 'Unknown error' },
      { request_id: requestId }
    );
  }
}

